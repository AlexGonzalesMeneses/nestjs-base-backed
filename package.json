{
  "name": "base-backend-nest",
  "version": "0.0.1",
  "description": "",
  "author": "agetic@agetic.gob.bo",
  "private": true,
  "license": "LPG-Bolivia",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build && npm run copy:statics",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start && npm run copy:statics",
    "start:dev": "NODE_ENV=development npm run copy:statics && nest start --watch",
    "start:database": "./scripts/database.sh",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --verbose",
    "test:single": "NODE_ENV=test jest -i",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cov": "NODE_ENV=test jest --coverage",
    "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migrations:generate": "npm run typeorm -- migration:generate -c connection -n",
    "migrations:run": "npm run typeorm -- migration:run -c connection",
    "migrations:revert": "npm run typeorm -- migration:revert -c connection",
    "seeds:create": "npm run typeorm -- migration:create -c seed -n",
    "seeds:run": "npm run typeorm -- migration:run -c seed",
    "schema:drop": "npm run typeorm -- schema:drop -c connection",
    "rimraf": "./node_modules/rimraf/bin.js",
    "copy:statics": "cpx 'src/core/config/authorization/*.{conf, csv}' 'dist/src/core/config/authorization'",
    "compodoc": "compodoc -p tsconfig.json -o --language es-ES"
  },
  "dependencies": {
    "@golevelup/ts-jest": "^0.3.1",
    "@nestjs/common": "^7.5.1",
    "@nestjs/config": "^0.6.1",
    "@nestjs/core": "^7.5.1",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/schedule": "^0.4.3",
    "@nestjs/swagger": "^4.7.11",
    "@nestjs/typeorm": "^7.1.5",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "dayjs": "^1.10.4",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "express-session": "^1.17.1",
    "helmet": "^4.4.1",
    "nanoid": "^3.1.22",
    "nest-authz": "^2.1.0",
    "nest-winston": "^1.4.0",
    "openid-client": "^4.2.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.30",
    "typeorm-adapter": "^1.4.0",
    "typeorm-store": "^1.2.0",
    "winston": "^3.3.3",
    "wkhtmltopdf": "^0.3.4",
    "zxcvbn-typescript": "^5.0.1"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.3",
    "@nestjs/testing": "^7.5.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cron": "^1.7.2",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.3",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@types/zxcvbn": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "cpx": "^1.5.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typeorm-uml": "^1.6.2",
    "typescript": "^4.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "src/main.ts",
      "src/database/migrations/",
      "src/database/seeds/",
      ".module.ts",
      ".entity.ts",
      ".dto.ts",
      ".guard.ts"
    ],
    "collectCoverage": true,
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
